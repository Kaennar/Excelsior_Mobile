<!-- Top Navbar -->
<div class="navbar">
    <div class="navbar-inner">
        <div class="left"><a href="#" class="back link"><i class="icon icon-back"></i><span>Back</span></a></div>
        <div class="center sliding"> Coach Profile
        </div>
        <div class="right"> <a href="#" class="link" onclick="excelsior.favouriteCoach({{id}})">Favorite</a></div>
    </div>
</div>


<div class="pages">
    <div class="page" data-page="coach-profile">
        <div class="page-content">

            <div class="row">
                <div class="col-100 content-center" style="padding-top:5px; padding-bottom:5px; padding-left=10px; padding-right:10px;">
                    {{#if video_url}}
                        <iframe width="100%" height="225" src="http://www.youtube.com/embed/E4YiGdf_3dg" frameborder="0" allowfullscreen></iframe>
                    {{/if}}
                </div>
                <div class="col-100">
                    <b style="font-size:160%; padding-left:16px;"> 
                        {{firstname}} {{lastname}}
                    </b>
                    <div class="content-block-title"> Details </div>
                    <div style="padding-left:16px;"
                    <p> <b>Bio:</b>
                        {{Bio}}
                    </p>
                    {{#if ExperienceLevel}}
                    <P><b>Experience Level: </b>{{ExperienceLevel}}
                    </p>
                    {{/if}}
                    {{#if TimeDrop}}
                    <p><b>Time Dropped: </b> {{TimeDrop}}
                    </p>
                    {{/if}}
                </div>
                </div>
            </div>
            {{#if Reviews}}
            <div class="content-block-title">
                Reviews
            </div>
            <div class="content-block">
            {{#each Reviews}}
                <div class="row" style="padding:2px; color:black;">
                        <div class="col-75">
                            <b> {{title}}</b>
                        </div>
                        <div class="col-25">
                            {{rating}}
                        </div>
                </div>
                <div class="row" style="color:black;">
                    <div class="col-100">
                        {{content}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-30">
                    </div>
                    <div class="col-25">
                        {{postDate}}
                    </div>
                    <div class="col-45">
                        by {{assoc_user}}
                    </div>
                </div>
            {{/each}}
            <div class="row">
                <div class="col-100"><a class="button center"> Book Me! </a></div>
            </div>
            {{/if}}
            <div class="buffer"> </div>
        </div>
    </div>
</div>