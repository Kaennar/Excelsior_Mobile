<!-- Top Navbar -->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"> </div>
		<div class="center sliding"> Coaches List
		</div>
		<div class="right"> </div>
	</div>
</div>


<div class="pages">
	<div class="page" data-page="coach-list">
		<div class="page-content">
			{{#each array}}
			<a onClick="excelsior.loadCoachProfileView({{id}});">
			<div class="content-block" style="background-color:#ffffff">
				<div class="row" style="padding:2px;">
					<div class="col-100 content-center" style="padding-top:5px; padding-bottom:5px; padding-left=10px; padding-right:10px;">
						{{#if video_url}}
						    <iframe width="100%" height="225" src="http://www.youtube.com/embed/E4YiGdf_3dg" frameborder="0" allowfullscreen></iframe>
						{{/if}}
					</div>
				</div>
				<div class="row">
					
						<div class="col-100 left">
							<div class="content-block">
							    <p><b>{{firstname}} {{lastname}}</b></p>
							    {{#if Bio}}
							    	<p><b>Bio:</b> {{Bio}}</p>
							    {{/if}}
							    {{#if ExperienceLevel}}
							    	<p><b>Experience Level:</b>{{ExperienceLevel}}</p>
							    {{/if}}
							    {{#if Location}}
							    	<p><b>Location:</b> {{Location}}</p>
							    {{/if}}
							    {{#if FunFact}}
							    	<p><b>Fun Fact:</b> {{FunFact}}</p>
							    {{/if}}
							    {{#if TimeDrop}}
							    	<p><b>Time Drop:</b> {{TimeDrop}}</p>
							    {{/if}}
							</div>
						</div>
				</div>
			</div>
			</a>
			{{/each}}
			<div class="buffer">
			</div>
		</div>
	</div>
</div>